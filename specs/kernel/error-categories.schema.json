{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://peacprotocol.org/schemas/kernel/error-categories.schema.json",
  "title": "PEAC Error Categories",
  "description": "Schema for the auto-generated error-categories.json artifact. Validates the language-neutral category list used by non-TypeScript SDKs.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://peacprotocol.org/schemas/kernel/error-categories.schema.json"
    },
    "$comment": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Spec version from specs/kernel/errors.json"
    },
    "source_file": {
      "type": "string",
      "const": "specs/kernel/errors.json",
      "description": "Path to the source file from which categories are derived"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9_]*$"
      },
      "uniqueItems": true,
      "description": "Alphabetically sorted list of error categories. Sort order is a codegen invariant."
    }
  },
  "required": ["version", "source_file", "categories"],
  "additionalProperties": false
}
