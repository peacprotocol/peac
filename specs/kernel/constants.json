{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "0.10.0",
  "description": "PEAC protocol constants - normative source of truth",
  "wire_format": {
    "type": "peac-receipt/0.1",
    "wire_version": "0.1",
    "frozen_until": "v1.0.0",
    "description": "JWT type header value for PEAC receipts (normalized to peac-<artifact>/<major>.<minor> pattern)"
  },
  "algorithms": {
    "supported": ["EdDSA"],
    "default": "EdDSA",
    "description": "Cryptographic signature algorithms"
  },
  "headers": {
    "receipt": "PEAC-Receipt",
    "purpose": "PEAC-Purpose",
    "purpose_applied": "PEAC-Purpose-Applied",
    "purpose_reason": "PEAC-Purpose-Reason",
    "agent_identity": "PEAC-Agent-Identity",
    "dpop": "DPoP",
    "description": "HTTP header names for PEAC protocol (v0.9.25: added agent_identity)"
  },
  "identity": {
    "attestation_type": "peac/agent-identity",
    "control_types": ["operator", "user-delegated"],
    "proof_methods": ["http-message-signature", "dpop", "mtls", "jwk-thumbprint"],
    "key_lifecycle_states": ["pending", "active", "deprecated", "retired", "revoked"],
    "limits": {
      "max_agent_id_length": 256,
      "max_capabilities": 32,
      "max_capability_length": 64,
      "max_delegation_chain": 8,
      "max_key_directory_url_length": 2048,
      "description": "Agent identity field limits (implementation safety)"
    },
    "binding": {
      "clock_skew_seconds": 30,
      "max_binding_age_seconds": 300,
      "description": "Identity binding time validation parameters"
    },
    "description": "Agent identity attestation constants (v0.9.25+)"
  },
  "purpose": {
    "canonical_tokens": ["train", "search", "user_action", "inference", "index"],
    "internal_only": ["undeclared"],
    "reason_values": [
      "allowed",
      "constrained",
      "denied",
      "downgraded",
      "undeclared_default",
      "unknown_preserved"
    ],
    "limits": {
      "max_token_length": 64,
      "max_tokens_per_request": 10,
      "description": "Purpose header parsing limits (implementation safety, RECOMMENDED)"
    },
    "grammar": {
      "pattern": "^[a-z][a-z0-9_]*(?::[a-z][a-z0-9_]*)?$",
      "description": "Purpose token grammar: lowercase start, alphanumeric/underscore, optional vendor prefix"
    },
    "description": "Purpose vocabulary for PEAC-Purpose header (v0.9.24+)"
  },
  "discovery": {
    "manifest_path": "/.well-known/peac.txt",
    "manifest_version": "peac-policy/0.1",
    "cache_ttl_seconds": 3600,
    "description": "Discovery manifest location and settings (deprecated - see policy/issuer config)"
  },
  "policy": {
    "manifest_path": "/.well-known/peac.txt",
    "fallback_path": "/peac.txt",
    "version": "peac-policy/0.1",
    "max_bytes": 262144,
    "max_depth": 8,
    "cache_ttl_seconds": 3600,
    "description": "Policy manifest settings per PEAC-TXT.md"
  },
  "issuer_config": {
    "config_path": "/.well-known/peac-issuer.json",
    "version": "peac-issuer/0.1",
    "max_bytes": 65536,
    "max_depth": 4,
    "fetch_timeout_ms": 10000,
    "cache_ttl_seconds": 3600,
    "description": "Issuer configuration settings per PEAC-ISSUER.md"
  },
  "jwks": {
    "rotation_days": 90,
    "overlap_days": 7,
    "emergency_revocation_hours": 24,
    "description": "JWKS rotation and revocation settings"
  },
  "receipt": {
    "min_receipt_id_length": 16,
    "max_receipt_id_length": 64,
    "default_ttl_seconds": 86400,
    "description": "Receipt validation constants"
  },
  "limits": {
    "max_amount_cents": 999999999999,
    "min_amount_cents": 1,
    "description": "Payment amount validation limits"
  },
  "related_specs": {
    "wire_version": "specs/wire/VERSION.json",
    "errors": "specs/kernel/errors.json",
    "registries_doc": "docs/specs/REGISTRIES.md",
    "header_semantics": "docs/specs/PROTOCOL-BEHAVIOR.md#13-http-header-semantics",
    "interop": "docs/specs/INTEROP.md",
    "agent_identity": "docs/specs/AGENT-IDENTITY.md",
    "description": "Related specification documents (v0.9.25: added agent_identity)"
  }
}
