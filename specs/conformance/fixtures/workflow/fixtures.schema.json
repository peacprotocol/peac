{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://peacprotocol.org/schemas/conformance/workflow-fixtures.schema.json",
  "title": "PEAC Workflow Conformance Fixtures",
  "description": "Schema for workflow correlation conformance test vectors. Used by valid.json, invalid.json, and edge-cases.json.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://peacprotocol.org/schemas/conformance/workflow-fixtures.schema.json"
    },
    "$comment": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "PEAC spec version that introduced these fixtures"
    },
    "fixtures": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/fixture"
      },
      "minItems": 1
    }
  },
  "required": ["version", "fixtures"],
  "additionalProperties": false,
  "$defs": {
    "fixture": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$",
          "description": "Kebab-case fixture name (unique within file)"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["WorkflowContext", "WorkflowSummaryAttestation"],
          "description": "Which schema this fixture tests"
        },
        "input": {
          "type": "object",
          "description": "Raw input to pass to the validator"
        },
        "expected": {
          "$ref": "#/$defs/expected"
        }
      },
      "required": ["name", "description", "type", "input", "expected"],
      "additionalProperties": false
    },
    "expected": {
      "type": "object",
      "properties": {
        "valid": {
          "type": "boolean",
          "description": "Whether the input should pass validation"
        },
        "error_code": {
          "type": "string",
          "description": "Normative: canonical error code from specs/kernel/errors.json. Test harnesses MUST assert this value."
        },
        "error": {
          "type": "string",
          "description": "Informational: human-readable error description. Test harnesses MUST NOT assert exact match."
        },
        "meta": {
          "type": "object",
          "description": "Informational metadata (e.g., validation_order_note). Not used for assertion.",
          "additionalProperties": true
        }
      },
      "required": ["valid"],
      "allOf": [
        {
          "if": {
            "properties": { "valid": { "const": false } },
            "required": ["valid"]
          },
          "then": {
            "properties": {
              "error_code": {
                "type": "string",
                "pattern": "^E_WORKFLOW_[A-Z_]+$"
              }
            },
            "required": ["error_code"]
          }
        }
      ]
    }
  }
}
