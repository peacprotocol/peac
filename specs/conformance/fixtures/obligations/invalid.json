      "expected": {
        "valid": false,
        "error_contains": "Destination is required when contribution type is 'direct'"
      }
    },
    {
      "id": "ecosystem-contribution-no-destination",
      "description": "Ecosystem contribution type without destination",
      "input": {
        "contribution": {
          "type": "ecosystem",
