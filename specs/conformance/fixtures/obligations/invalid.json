      "input": {
        "contribution": {
          "type": "open",
          "min_amount": 1000
        }
      },
      "expected": {
        "valid": false,
        "error_contains": "Currency is required when min_amount is specified"
      }
    },
    {
      "id": "invalid-currency-format",
      "description": "Currency with invalid format (lowercase)",
      "input": {
        "contribution": {
          "type": "open",
