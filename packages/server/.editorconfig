# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ts,tsx,js,jsx}]
quote_type = double

[*.md]
trim_trailing_whitespace = false
max_line_length = 100

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2

[*.json]
indent_size = 2