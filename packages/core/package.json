{
  "name": "@peac/core",
  "version": "0.10.12",
  "description": "DEPRECATED - Use @peac/kernel, @peac/schema, @peac/crypto, @peac/protocol instead",
  "type": "module",
  "homepage": "https://www.peacprotocol.org",
  "bugs": {
    "url": "https://github.com/peacprotocol/peac/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peacprotocol/peac.git",
    "directory": "packages/core"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "dev"
  },
  "scripts": {
    "build:js": "tsup",
    "build:types": "rm -f dist/.tsbuildinfo && tsc -p tsconfig.types.json && rm -f dist/.tsbuildinfo",
    "prebuild": "rm -rf dist",
    "build": "pnpm run build:js && pnpm run build:types",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "echo 'Lint temporarily disabled due to workspace dependencies - run from root'",
    "typecheck": "tsc -p . --noEmit",
    "dev": "tsup --watch",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@peac/kernel": "workspace:*",
    "jose": "^5.2.0",
    "lru-cache": "^10.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "typescript": "^5.2.0",
    "jest": "^30.2.0",
    "@types/jest": "^30.0.0",
    "ts-jest": "^29.0.0",
    "tsup": "^8.0.0"
  },
  "keywords": [
    "peac",
    "core",
    "jws",
    "security",
    "observability"
  ],
  "author": "PEAC Protocol",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=22.0.0"
  }
}
