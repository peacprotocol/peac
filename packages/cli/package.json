{
  "name": "@peac/cli",
  "version": "0.9.13.2",
  "description": "PEAC Protocol CLI tools for discovery, hashing, and verification",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "peac": "./bin/peac.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "bin/**/*"
  ],
  "scripts": {
    "build": "tsup && chmod +x bin/peac.js",
    "build:types": "tsc -b tsconfig.types.json",
    "dev": "tsx src/cli.ts",
    "pretest": "pnpm build",
    "test": "node --test src/*.test.js",
    "lint": "echo 'Lint temporarily disabled due to workspace dependencies - run from root'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@peac/core": "workspace:^0.9.14",
    "@peac/disc": "workspace:^0.9.14",
    "commander": "^11.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "tsup": "^8.0.0"
  },
  "keywords": [
    "peac",
    "cli",
    "discovery",
    "verification",
    "hash"
  ],
  "author": "PEAC Protocol",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
