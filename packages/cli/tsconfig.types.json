{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",

    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "../../",
    "paths": {
      "@peac/core": ["packages/core/dist/src/index.d.ts", "packages/core/dist"],
      "@peac/disc": ["packages/discovery/dist/index.d.ts", "packages/discovery/dist"]
    }
  },
  "include": ["src/**/*"]
}
