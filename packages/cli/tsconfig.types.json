{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,

    "stripInternal": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "lib": ["ES2022", "DOM"],
    "types": ["node"],

    "baseUrl": "../../",
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
