{
  "name": "@peac/sdk",
  "version": "0.9.12.1",
  "description": "PEAC client SDK with discover/verify functions",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "pretest": "pnpm -w build && pnpm build",
    "test": "node --test src/*.test.js",
    "test:smoke": "node --test --test-name-pattern='(verifyRemote|falls back|clearCache)' src/*.test.js",
    "lint": "echo 'Lint temporarily disabled due to workspace dependencies - run from root'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@peac/core": "workspace:*",
    "@peac/disc": "workspace:*",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "peac",
    "sdk",
    "client",
    "verify",
    "discover"
  ],
  "license": "MIT",
  "repository": "https://github.com/peac-protocol/peac",
  "sideEffects": false
}
