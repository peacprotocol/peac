{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://peac.org/schemas/v0.9.2/peac.json",
  "title": "PEAC Protocol Policy File",
  "description": "Programmable Economic Access & Consent policy specification",
  "type": "object",
  "required": ["version", "id", "created", "terms"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^0\\.9\\.[0-9]+$",
      "description": "PEAC protocol version"
    },
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique policy identifier"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 creation timestamp"
    },
    "terms": {
      "type": "object",
      "properties": {
        "ai_training": {
          "type": "object",
          "properties": {
            "allowed": { "type": "boolean" },
            "price_per_gb": { "type": "number", "minimum": 0 }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
