{
  "name": "@peac/worker-core",
  "version": "0.9.28",
  "description": "Runtime-neutral TAP verification handler for edge workers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
