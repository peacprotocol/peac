{
  "name": "@peac/capture-core",
  "version": "0.10.7",
  "description": "Runtime-neutral capture pipeline for PEAC interaction evidence",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./testkit": {
      "types": "./dist/testkit.d.ts",
      "require": "./dist/testkit.js",
      "import": "./dist/testkit.js",
      "default": "./dist/testkit.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peacprotocol/peac.git",
    "directory": "packages/capture/core"
  },
  "author": "jithinraj <7850727+jithinraj@users.noreply.github.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/peacprotocol/peac/issues"
  },
  "homepage": "https://github.com/peacprotocol/peac#readme",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "test": "pnpm -w vitest run packages/capture/core/tests",
    "test:watch": "pnpm -w vitest packages/capture/core/tests",
    "test:exports": "node scripts/test-exports.mjs",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@peac/crypto": "workspace:*",
    "@peac/schema": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
