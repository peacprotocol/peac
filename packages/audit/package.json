{
  "name": "@peac/audit",
  "version": "0.10.11",
  "description": "Audit logging and case bundle generation for PEAC protocol disputes",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/peacprotocol/peac.git",
    "directory": "packages/audit"
  },
  "author": "jithinraj <7850727+jithinraj@users.noreply.github.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "pnpm run build:js && pnpm run build:types",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "build:js": "tsup",
    "build:types": "rm -f dist/.tsbuildinfo && tsc && rm -f dist/.tsbuildinfo"
  },
  "dependencies": {
    "@peac/crypto": "workspace:*",
    "@peac/kernel": "workspace:*",
    "@peac/schema": "workspace:*",
    "yazl": "^2.5.1",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/yauzl": "^2.10.3",
    "@types/yazl": "^2.4.5",
    "typescript": "^5.3.3",
    "vitest": "^4.0.0",
    "tsup": "^8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "sideEffects": false
}
