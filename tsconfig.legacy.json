{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES2022"],
    "composite": false,
    "noEmit": true
  },
  "include": [
    "packages/**/*.ts",
    "apps/**/*.ts",
    "examples/**/*.ts",
    "scripts/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/dist/**", "**/node_modules/**", "archive/**", "apps/**", "examples/**"]
}
