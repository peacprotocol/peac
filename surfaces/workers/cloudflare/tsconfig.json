{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "WebWorker"],
    "types": ["@cloudflare/workers-types"],
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@peac/contracts": ["../../../packages/contracts/src"],
      "@peac/contracts/*": ["../../../packages/contracts/src/*"],
      "@peac/mappings-tap": ["../../../packages/mappings/tap/src"],
      "@peac/mappings-tap/*": ["../../../packages/mappings/tap/src/*"],
      "@peac/jwks-cache": ["../../../packages/jwks-cache/src"],
      "@peac/jwks-cache/*": ["../../../packages/jwks-cache/src/*"],
      "@peac/http-signatures": ["../../../packages/http-signatures/src"],
      "@peac/http-signatures/*": ["../../../packages/http-signatures/src/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "../_shared/**/*.ts", "../../_shared/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
