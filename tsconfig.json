{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist", "coverage", "archive", "**/*.test.ts", "**/*.spec.ts"]
}
