{
  "name": "@peac/app-api",
  "version": "0.9.12.1",
  "description": "PEAC Protocol API server with OpenAPI 3.1, RFC 9457 Problem Details, and content negotiation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "private": true,
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "pretest": "pnpm build",
    "test": "node --test src/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage src/*.test.js",
    "test:watch": "node --test --watch src/*.test.js",
    "lint": "echo 'Lint temporarily disabled due to workspace dependencies - run from root'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "perf": "node scripts/perf-test.js"
  },
  "dependencies": {
    "@peac/core": "workspace:^0.9.12.1",
    "@peac/disc": "workspace:^0.9.12.1",
    "@peac/receipts": "workspace:^0.9.12.1",
    "@peac/crawler": "workspace:^0.9.12.1",
    "@peac/pay402": "workspace:^0.9.12.1",
    "hono": "^4.9.7",
    "@hono/node-server": "^1.8.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "tsup": "^8.0.0"
  },
  "keywords": [
    "peac",
    "api",
    "openapi",
    "rfc9457",
    "problem-details",
    "hono"
  ],
  "author": "PEAC Protocol",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
