{
  "name": "@peac/monorepo",
  "version": "0.9.15",
  "private": true,
  "description": "PEAC Protocol - Cryptographic receipts for agentic commerce",
  "repository": {
    "type": "git",
    "url": "https://github.com/peacprotocol/peac.git"
  },
  "author": "jithinraj <7850727+jithinraj@users.noreply.github.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "packages/rails/*",
    "packages/mappings/*",
    "apps/*"
  ],
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "clean": "turbo run clean && rm -rf node_modules",
    "ci:guards": "bash scripts/ci/forbid-strings.sh",
    "ci:surface": "bash scripts/ci/surface-validator.sh",
    "ci:all": "pnpm run ci:guards && pnpm run ci:surface && pnpm run lint && pnpm run typecheck && pnpm test"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
