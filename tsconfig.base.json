{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@peac/kernel": ["./packages/kernel/src"],
      "@peac/schema": ["./packages/schema/src"],
      "@peac/crypto": ["./packages/crypto/src"],
      "@peac/protocol": ["./packages/protocol/src"],
      "@peac/control": ["./packages/control/src"],
      "@peac/contracts": ["./packages/contracts/src"],
      "@peac/receipts": ["./packages/receipts/src"],
      "@peac/disc": ["./packages/discovery/src"],
      "@peac/server": ["./packages/server/src"],
      "@peac/cli": ["./packages/cli/src"],
      "@peac/core": ["./packages/core/src"],
      "@peac/aipref": ["./packages/aipref/src"],
      "@peac/pay402": ["./packages/pay402/src"],
      "@peac/sdk-js": ["./packages/sdk-js/src"],
      "@peac/rails-stripe": ["./packages/rails/stripe/src"],
      "@peac/rails-x402": ["./packages/rails/x402/src"],
      "@peac/mappings-acp": ["./packages/mappings/acp/src"],
      "@peac/mappings-rsl": ["./packages/mappings/rsl/src"],
      "@peac/policy-kit": ["./packages/policy-kit/src"],
      "@peac/transport-http": ["./packages/transport/http/src"],
      "@peac/http-signatures": ["./packages/http-signatures/src"],
      "@peac/jwks-cache": ["./packages/jwks-cache/src"],
      "@peac/mappings-tap": ["./packages/mappings/tap/src"],
      "@peac/privacy": ["./packages/privacy/src"],
      "@peac/telemetry": ["./packages/telemetry/src"],
      "@peac/telemetry-otel": ["./packages/telemetry-otel/src"],
      "@peac/audit": ["./packages/audit/src"],
      "@peac/capture-core": ["./packages/capture/core/src"],
      "@peac/middleware-core": ["./packages/middleware-core/src"],
      "@peac/middleware-express": ["./packages/middleware-express/src"],
      "@peac/adapter-core": ["./packages/adapters/core/src"],
      "@peac/adapter-openclaw": ["./packages/adapters/openclaw/src"],
      "@peac/mappings-mcp": ["./packages/mappings/mcp/src"],
      "@peac/mappings-ucp": ["./packages/mappings/ucp/src"],
      "@peac/mappings-aipref": ["./packages/mappings/aipref/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "lib", "coverage"]
}
