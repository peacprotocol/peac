#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Quality gates for world-class push readiness
echo "🔍 Running pre-push quality gates..."

# Check no dist files are tracked
pnpm run ci:check-no-dist

# Lint with zero warnings
pnpm -w eslint . --max-warnings 0

# Format check
pnpm -w format:check

# Schema validation
pnpm -w run schema:check

# TypeScript check
pnpm -w turbo run typecheck

echo "✅ All quality gates passed - push approved"