#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Full TypeScript quality gates
echo "ğŸ” Running full TypeScript validation gates..."

# 1. Build all packages
pnpm -w turbo run build

# 2. Build TypeScript declarations
pnpm -w turbo run build:types

# 3. TypeScript compilation check
pnpm -w turbo run typecheck

# 4. Lint with zero warnings
pnpm -w eslint . --max-warnings 0

# 5. d.ts sanity check (NodeNext should have .js in relative imports)
echo "Checking declaration files..."
! find packages -path "*/dist/*.d.ts" -exec grep -l "from '\./[^']*[^.]'" {} \; | head -1 >/dev/null && echo "âœ… d.ts files have proper .js extensions"

# 6. No tracked artifacts
test -z "$(git ls-files 'packages/*/dist/*')" && echo "âœ… No tracked dist files" || (echo "âŒ Tracked dist files found" && exit 1)

# 7. Format check
pnpm -w format:check

echo "âœ… All full TypeScript quality gates passed - push approved"