{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lint": {
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "lib/**", "*.tsbuildinfo"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "conformance": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "perf": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "sbom": {
      "dependsOn": ["build"],
      "outputs": ["*.sbom.json"]
    },
    "release": {
      "dependsOn": ["lint", "build", "test", "conformance", "perf", "sbom"],
      "outputs": []
    }
  }
}
